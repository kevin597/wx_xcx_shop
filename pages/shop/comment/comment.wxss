/* pages/shop/comment/pic.wxss */
@import '/pages/shop/common.wxss';

.upload-img-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  display: block;
  border: 1px dashed #999;
  text-align: center;
  color: #999;
  position: relative;
  box-sizing: border-box;
  margin: 25rpx;
  float: left;
}

.img-v {
  overflow: hidden;
}

.img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  display: block;
  border: 1px dashed #b3b3b3;
  text-align: center;
  color: #999;
  position: relative;
  box-sizing: border-box;
  margin: 25rpx;
  float: left;
}

.img image {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0;
}
.video_item{
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0;
}

.delete-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  /* width: 0;
  height: 0;
  border-bottom: 80rpx solid rgba(0, 0, 0, 0.5);
  border-left: 80rpx solid transparent; */
  background-color: rgba(0, 0, 0, 0.5);
  height: 50rpx;
  width: 200rpx;
  color: #ffffff;
  line-height: 50rpx;
}


textarea {
  height: 600rpx;
  padding: 15rpx;
}

.submit {
  color: #fff;
  height: 88rpx;
  width: 580rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 50rpx;
  background: -webkit-linear-gradient(left, #f15c6c, #f7824e);
  background: linear-gradient(to right, #f15c6c, #f7824e);
  margin: 50rpx auto;
}

.addimg {
  width: 62rpx;
  height: 62rpx;
  margin: 30rpx 0 0 70rpx;
}

.addtxt {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
}
