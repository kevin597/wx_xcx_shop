.nav_btn {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  margin: 10rpx auto;
}

.nav_list {
  flex: 0 0 20%;
  height: 170rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.nav_list_img {
  width: 94rpx;
  height: 94rpx;
  border-radius: 10rpx;
  display: block;
  margin: 20rpx auto;
  margin-bottom: 0;
}

.nav_list text {
  color: #4c4c4c;
  font-size: 26rpx;
  text-align: center;
  display: block;
  width: 94rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin: 0 auto;
}

