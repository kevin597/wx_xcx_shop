/* pages/shop/index/index.wxss */
@import '/pages/shop/common.wxss';

.search-form {
  margin: 20rpx auto;
  height: 70rpx;
  overflow: hidden;
}

.search-bell, .search-search {
  width: 90rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  display: block;
  float: left;
}

.search {
  height: 70rpx;
  background-color: #f7f7f7;
  border-radius: 50rpx;
  margin-left: 20rpx;
  overflow: hidden;
}

.search-input {
  height: 70rpx;
  display: block;
  float: left;
  width: 540rpx;
  font-size: 32rpx;
}

.ad {
  height: 174rpx;
  width: 750rpx;
}

.product_title {
  height: 80rpx;
  background-color: #fff;
  text-align: right;
}

.product_title_a {
  padding-right: 30rpx;
  font-size: 30rpx;
  line-height: 80rpx;
}

.swiper {
  height: 300rpx;
}

.sslide_image {
  display: block;
  width: 750rpx;
  height: 300rpx;
}

