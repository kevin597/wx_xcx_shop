/* pages/shop/product/product.wxss */
@import '/pages/shop/common.wxss';

.swiper {
  height: 730rpx;
  position: relative;
}

.sslide_image {
  display: block;
  width: 750rpx;
  height: 730rpx;
}

.imageCount {
  width: 80rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;
  line-height: 40rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  right: 22rpx;
  bottom: 22rpx;
}


.product-info-title, .pintuan-info-title {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #d4d4d4;
  position: relative;
  padding-left: 50rpx;
  border-top: 20rpx solid #f7f7f7;
}

.product-info-title:before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: 25rpx;
  width: 4rpx;
  height: 30rpx;
  background-color: #f7824e;
}

.more {
  position: absolute;
  right: 30rpx;
  top: 0;
  color: #808080;
}

.product-info-content {
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #808080;
  display: block;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.product-title {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.product-title .buy, .product-title .free {
  width: 150rpx;
  color: #808080;
}

.product-title .title {
  padding-bottom: 20rpx;
}
