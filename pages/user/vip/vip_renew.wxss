/* pages/user/vip/vip_renew.wxss */
@import '/pages/user/common.wxss';

page{
  background-color: #f7f7f7;
}

.vip_mod{
  overflow: hidden;
  padding: 30rpx 0;
}
.vip_mod .box{
  width: 330rpx;
  margin-left: 30rpx;
  overflow: hidden;
  position: relative;
  border-radius:5px;
  box-shadow: 0 0 20px rgba(0,0,0,.2);
}
picker{
  display: block;
}

.vip_mod .box.clk::before{
  content:'';
  width: 100%;
  height: 100%;
  border: 1px solid #f7824e;
  top:0;
  left: 0;
  position: absolute;
  z-index: 2;
  box-sizing: border-box;
  border-radius: 5px;
}
.vip_mod .box .dot{
  width: 51rpx;
  height:46rpx;
  position: absolute;
  z-index: 3;
  bottom: 0;
  right: 0;
  display: none;
}
.vip_mod .box.clk .dot{
  display: block;
}
.vip_mod .box .bg{
  width:100%;
  height:100%;
  position: absolute;
  top: 0;
  left: 0;
}
.vip_mod .box .name{
  position: relative;
  font-size:20px;
  color: #f7824e;
  text-align: center;
  padding: 50rpx 0;
}




.operate_box{
  height:22px;
  line-height: 22px;
  border: 1px solid #ddd;
  box-sizing: content-box;
  border-radius: 3px;
  overflow: hidden;
}
.operate_box .reduce_btn,.operate_box .add_btn{
  width: 24px;
  height: 22px;
  position: relative;
}
.operate_box .reduce_btn::after,.operate_box .add_btn::after{
  content:'';
  width: 50%;
  height:2px;
  background-color: #ccc;
  position: absolute;
  top: 50%;
  left:50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
}
.operate_box .add_btn::before{
  content:'';
  width: 2px;
  height:50%;
  background-color: #ccc;
  position: absolute;
  top: 50%;
  left:50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
}
.operate_box .num{
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  min-width: 28px;
  padding: 0 5px;
  box-sizing: border-box;
  font-size: 12px;
  line-height: 22px;
  height: 100%;
}

.oth_txt{
  padding: 0 30rpx;
  text-align: center;
  color: #555;
}