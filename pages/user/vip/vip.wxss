/* pages/user/vip/vip.wxss */
@import '/pages/user/common.wxss';

page{
  background-color: #f7f7f7;
}

.person_info{
  background-color: #fb7039;
  position: relative;
}
.person_info .ps_bg{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.person_info .person_mod{
  padding: 30rpx;
  overflow: hidden;
  color: #fff;
  position: relative;
  z-index: 2;
}
.person_info .person_mod .photo{
  width: 56px;
  height: 56px;
  overflow: hidden;
  margin-right: 20rpx;
  border-radius: 50%;
  background-color: #f7f7f7;
}
.person_info .person_mod .info{
  overflow: hidden;
}
.person_info .person_mod .info .name{
  line-height: 20px;
  margin-bottom: 5px;
}
.person_info .person_mod .info .level{
  opacity: .6;
}

.intro{
  padding-top: 25px;
  padding-bottom: 20px;
  line-height: 1.4;
}
.intro .t1{color: #333;display: block;}
.intro .t2{color: #999;margin-top: 20px;display: block}