/* pages/user/invite/invite.wxss */
@import '/pages/user/common.wxss';

.invite_wrap{
  width: 72%;
  position: absolute;
  top:50%;
  left: 14%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  background-color: #fff;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0 0 50px rgba(0,0,0,.2);
}
.invite_wrap .invite_top{
  padding: 15px 12px;
}
.invite_wrap .invite_top .photo{
  width: 44px;
  height: 44px;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 10px;
}
.invite_wrap .invite_top .photo .img{
  width: 100%;
  height: 100%;
}
.invite_wrap .code_box{
  overflow: hidden;
}
.invite_wrap .code_box .code{
  width: 360rpx;
  height: 360rpx;
  overflow: hidden;
  margin: auto;
}
.invite_wrap .code_box .code .img{
  width: 100%;
  height: 100%;
}
.invite_wrap .code_box .tc{
  padding-top: 5px;
  padding-bottom: 136rpx;
  color: #666;
}