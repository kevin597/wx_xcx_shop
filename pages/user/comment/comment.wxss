/* pages/user/comment/comment.wxss */
@import '/pages/shop/common.wxss';
page{
  background-color: #efeff4;
}
.comment_wrap{
  margin-bottom: 10px;
  background-color: #fff;
  overflow: hidden;
}
.comment_wrap .order_mod{
  margin-left: 110rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  background-color: #f8f8f8;
}
.comment_wrap .order_mod .photo{
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
}
.comment_wrap .order_mod .photo .img{
  width:100%;
  height: 100%;
}
.comment_wrap .order_mod .info{
  box-sizing: border-box;
  overflow: hidden;
  padding: 20rpx;
}
.comment_wrap .order_mod .info .name{
  font-size:28rpx;
  line-height: 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.comment_wrap .order_mod .info .val{
  color: #333;
  font-size: 28rpx;
  line-height:40rpx;
  margin-top: 30rpx;
}